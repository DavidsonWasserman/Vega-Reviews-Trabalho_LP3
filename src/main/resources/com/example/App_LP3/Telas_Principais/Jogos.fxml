<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: #333333;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trabalho_LP3.controllers.JogosController">
    <children>
      <VBox alignment="CENTER" maxHeight="600.0" maxWidth="800.0" spacing="30.0" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-background-radius: 20;">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <StackPane.margin>
            <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
         </StackPane.margin>
         <children>
              <VBox>
                  <children>
                      <Label text="Procurar por nome:" textFill="#1aa7ec">
                          <font>
                              <Font size="15.0" />
                          </font>
                          <padding>
                              <Insets left="10.0" top="30.0" />
                          </padding>
                          <VBox.margin>
                              <Insets />
                          </VBox.margin>
                      </Label>
                      <TextField fx:id="campoBusca" maxWidth="400.0" promptText="Pesquisar...">
                          <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                          </VBox.margin>
                      </TextField>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                            <Label text="Jogos:" textFill="#1aa7ec">
                                <font>
                                    <Font size="25.0" />
                                </font>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                            </Label>
                               <Region HBox.hgrow="ALWAYS" />
                        <MenuButton fx:id="menuClassificar" alignment="CENTER_RIGHT" mnemonicParsing="false" style="-fx-background-color: #1aa7ec;" text="Classificar por:">
                          <items>
                              <MenuItem fx:id="itemAZ" onAction="#ordenarAZ" mnemonicParsing="false" style="-fx-text-fill: #1aa7ec;" text="A-Z" />
                              <MenuItem fx:id="itemZA" onAction="#ordenarZA" mnemonicParsing="false" style="-fx-text-fill: #1aa7ec;" text="Z-A" />
                              <MenuItem fx:id="itemMaiorNota" onAction="#ordenarMaiorNota" mnemonicParsing="false" style="-fx-text-fill: #1aa7ec;" text="Maior Nota" />
                              <MenuItem fx:id="itemMenorNota" onAction="#ordenarMenorNota" mnemonicParsing="false" style="-fx-text-fill: #1aa7ec;" text="Menor Nota" />
                          </items>
                           <HBox.margin>
                              <Insets right="10.0" top="5.0" />
                           </HBox.margin>
                        </MenuButton>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                      <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #1aa7ec; -fx-padding: 0;">
                          <content>
                              <ListView fx:id="campoExibe" prefWidth="382.0" />
                          </content>
                          <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                          </VBox.margin>
                      </ScrollPane>
                  </children>
               <padding>
                  <Insets bottom="100.0" left="100.0" right="100.0" top="10.0" />
               </padding>
              </VBox>
         </children>
      </VBox>
    </children>
</StackPane>
